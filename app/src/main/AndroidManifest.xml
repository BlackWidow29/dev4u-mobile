<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="br.com.dev4u">

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Obter Localização por Hardware-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Obter Localização por wi-fi e triangulação de antenas-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- outras permissões e configurações existentes-->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <!-- Permitir criar arquivo no armazenamento do dispositivo -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ClearGrantApplication"
            android:allowBackup="true"
            android:icon="@mipmap/app_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/app_logo_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Dev4u">


        <activity
                android:name=".CadastroActivity"
                android:exported="true"
                android:theme="@style/AppTheme.Toolbar"/>
        <activity
        android:name=".TelaInicialActivity"
        android:exported="true"
        android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".ServicoActivity"
            android:exported="true"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".ConfigActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".MapasActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar"
            />


        <activity
                android:name=".LoginActivity"
                android:exported="true"
                android:theme="@style/AppTheme.NoActionBar">



            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>

            </intent-filter>
        </service>

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notificacao" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <!--Google play services-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--Chave de acesso à API do Google Maps-->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />

    </application>

</manifest>