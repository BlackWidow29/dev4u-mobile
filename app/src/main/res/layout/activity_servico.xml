<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicoActivity">



    <include layout="@layout/toolbar" />


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="854dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098"
        app:srcCompat="@drawable/logo_cleargrantpng" />

    <Button
        android:id="@+id/bt_remover"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Remover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <TextView
        android:id="@+id/txt_descicao"
        android:layout_width="254dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Descrição do Serviço:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/descricao_servico"
        android:layout_width="254dp"

        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descicao" />

    <TextView
        android:id="@+id/txt_vl_obra"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Valor da Obra:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricao_servico" />

    <TextView
        android:id="@+id/valor_obra_servico"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_vl_obra" />

    <TextView
        android:id="@+id/txt_vl_total"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="254dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="Valor Total do Serviço:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor_obra_servico" />

    <TextView
        android:id="@+id/valor_total_servico"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_vl_total" />

    <TextView
        android:id="@+id/txt_dt_inicial"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="254dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="Data de Início do Serviço:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor_total_servico" />

    <TextView
        android:id="@+id/dt_inicial_servico"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dt_inicial" />

    <TextView
        android:id="@+id/txt_dt_final"
        android:layout_width="254dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Data de Término do Serviço:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dt_inicial_servico" />

    <TextView
        android:id="@+id/dt_final_servico"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dt_final" />

</androidx.constraintlayout.widget.ConstraintLayout>